# API Configuration
NEXT_PUBLIC_GATEWAY_URL=https://api.greensteel.site
NEXT_PUBLIC_ASSET_PREFIX=

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_SUPPORT=true
NEXT_PUBLIC_ENABLE_INSTALL_PROMPT=true

# Cache Configuration
NEXT_PUBLIC_CACHE_DURATION=86400
NEXT_PUBLIC_MAX_CACHE_ENTRIES=100

# Service Worker
NEXT_PUBLIC_SW_VERSION=v1.0.0
NEXT_PUBLIC_SW_CACHE_NAME=greensteel-cache

# Performance
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/greensteel
DATABASE_SSL_MODE=require

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Email (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
