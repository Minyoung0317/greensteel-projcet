# Gateway 설정
GATEWAY_NAME=gateway

# 서비스 URL (Railway 배포 시 설정)
# Auth 서비스는 포트 8081에서 실행
AUTH_SERVICE_URL=https://your-auth-service.railway.app
CBAM_SERVICE_URL=
DATAGATHER_SERVICE_URL=
LCI_SERVICE_URL=

# CORS 설정
ALLOWED_ORIGINS=https://greensteel.site,https://www.greensteel.site
ALLOWED_ORIGIN_REGEX=^https://.*\.vercel\.app$|^https://.*\.up\.railway\.app$

# 로깅 레벨
LOG_LEVEL=INFO

# 주의: localhost, 127.0.0.1, http://*3000 등은 절대 사용하지 마세요
# 프로덕션에서는 Railway의 퍼블릭 도메인만 사용합니다

# Railway 배포 시 환경 변수 설정 방법:
# 1. Railway 프로젝트의 Variables 탭에서 설정
# 2. AUTH_SERVICE_URL=https://your-auth-service-name.railway.app
# 3. Gateway와 Auth 서비스 모두 같은 Railway 프로젝트에 배포하는 것을 권장
